{% style %}
  #up-arrow,#down-arrow{
  width: 20px;
  height: 20px;
}
#total-count{
  font-weight: 900;
  font-size: 70px;
}
.container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

{% endstyle %}

{% form 'product', product %}
  <select name="id">
    {% for variant in product.variants %}
      <option value={{ variant.id }}>
        {{ variant.title  }}
      </option>
    {% endfor %}
  </select>
  
  <button class="product-buttons__basket" type="submit">
    <svg
    stroke="var(--main-white)"
    fill="none"
    stroke-width="2"
    viewBox="0 0 24 25"
    height="1em"
    width="1em"
    stroke-linecap="round"
    stroke-linejoin="round"
    xmlns="http://www.w3.org/2000/svg"
    >
    <path d="m4 9 3-6m13 6-3-6m5 9H2l1.7 8.507c.10662.4372.36062.8244.71924 1.0963.35862.272.79996.412 1.24976.3967h12.662c.4498.0153.8911-.1247 1.2498-.3967.3586-.2719.6126-.6591.7192-1.0963L22 12Zm.5-3h-21c-.552285 0-1 .44772-1 1v1c0 .5523.447715 1 1 1h21c.5523 0 1-.4477 1-1v-1c0-.55228-.4477-1-1-1Zm-11 6v3.5M16 15l-.5 3.5M7 15l.5 3.5"></path>
    </svg>
    add to basket
  </button>
    
{% endform %}