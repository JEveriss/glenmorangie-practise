{% assign custom-var = product.metafields.custom %}

<div class="dropdown__wrapper">
  <details class="dropdown__details">
    {% if custom-var.blend_and_origin %}
      <p>{{ content | metafield_tag }}</p>
    {% else %}
      {{ content }}
    {% endif %}
    <summary class="dropdown__summary">
      {{ title }}
      <svg
        class="dropdown__svg"
        width="18"
        height="9"
        viewBox="0 0 18 9"
        fill="none"
        xmlns="http://www.w3.org/2000/svg">
        <path
          d="M1 1L9 8L17 1"
          stroke="black"
          stroke-width="2.5" />
      </svg>
    </summary>
  </details>
</div>