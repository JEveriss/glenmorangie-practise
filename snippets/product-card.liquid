{{ 'product-card.css' | asset_url | stylesheet_tag }}

{% assign custom-var = product.metafields.custom %}

<li class="product-card__wrapper">

  <a class="product-card__a" href="{{ product.url }}"> 
    <div class="product-card__title-wrapper">
      <h3 class="product-card__h3">{{ custom-var.collection }}</h3>
      <h2 class="product-card__h2">{{- product.title }}</h2>
    </div>

    <div class="product-card__image">
      <img class="product-card__img" src="{{ product.featured_image | image_url  }}" />
    </div>
  </a>

  <div class="product-card__div-text">
    <p class="product-card__p">ABV: {{ custom-var.abv }}% | VOLUME: {{ custom-var.volume }}cl</p>
    <span>
      <p class="product-card__price">{{- product.price | money }}</p>
      {% render 'favourite' %}
    </span>

  {% if product.selected_or_first_available_variant.inventory_quantity > 0 %}
    <button class="product-card__button" >
      <svg class="product-card__svg" stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24 25" class="css-u9mpbz" height="1em" width="1em" stroke-linecap="round" stroke-linejoin="round" xmlns="http://www.w3.org/2000/svg">
      <path d="m4 9 3-6m13 6-3-6m5 9H2l1.7 8.507c.10662.4372.36062.8244.71924 1.0963.35862.272.79996.412 1.24976.3967h12.662c.4498.0153.8911-.1247 1.2498-.3967.3586-.2719.6126-.6591.7192-1.0963L22 12Zm.5-3h-21c-.552285 0-1 .44772-1 1v1c0 .5523.447715 1 1 1h21c.5523 0 1-.4477 1-1v-1c0-.55228-.4477-1-1-1Zm-11 6v3.5M16 15l-.5 3.5M7 15l.5 3.5"></path>
      </svg> 
      Add to Basket
    </button>
  {% else %}
    <h2 class="product-card__out-of-stock">OUT OF STOCK</h2>
  {%endif%}

  </div>
</li>