{{ 'buttons.css' | asset_url | stylesheet_tag }}

<div class="product-buttons__wrapper">
  {% if product.selected_or_first_available_variant.inventory_quantity > 0 %}
  {% form 'product', product %}
  
  <button class="product-buttons__minus">-</button>
  <p class="product-buttons__quantity">1</p>
  <button class="product-buttons__add">+</button>
  
{% render 'add-to-cart-button' %}
  
  <button class="product-buttons__favourite">
    <svg
      class="product-buttons__svg"
      stroke="var(--main-orange)"
      fill="none"
      stroke-width="1.5"
      viewBox="0 0 24 24"
      height="1em"
      width="1em"
      stroke-linecap="round"
      stroke-linejoin="round"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
      ></path>
    </svg>
  </button>
  
{% endform %}
  
{% else %}
  
    <h2 class="product-buttons__h2">OUT OF STOCK</h2>
    <button class="product-buttons__favourite">
      <svg
        class="product-buttons__svg"
        stroke="var(--main-orange)"
        fill="none"
        stroke-width="1.5"
        viewBox="0 0 24 24"
        height="1em"
        width="1em"
        stroke-linecap="round"
        stroke-linejoin="round"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
        ></path>
      </svg>
    </button>
  {% endif %}
  
</div>
