{{ 'buttons.css' | asset_url | stylesheet_tag }}

<div class="product-buttons__wrapper">
{% if product.selected_or_first_available_variant.inventory_quantity > 0 %}

  <button class="product-buttons__minus">-</button>
  <p class="product-buttons__quantity">{{ product.selected_or_first_available_variant.inventory_quantity }}</p>
  <button class="product-buttons__add">+</button>
  <button class="product-buttons__basket">
    <svg
      stroke="var(--main-white)"
      fill="none"
      stroke-width="2"
      viewBox="0 0 24 25"
      height="1em"
      width="1em"
      stroke-linecap="round"
      stroke-linejoin="round"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path d="m4 9 3-6m13 6-3-6m5 9H2l1.7 8.507c.10662.4372.36062.8244.71924 1.0963.35862.272.79996.412 1.24976.3967h12.662c.4498.0153.8911-.1247 1.2498-.3967.3586-.2719.6126-.6591.7192-1.0963L22 12Zm.5-3h-21c-.552285 0-1 .44772-1 1v1c0 .5523.447715 1 1 1h21c.5523 0 1-.4477 1-1v-1c0-.55228-.4477-1-1-1Zm-11 6v3.5M16 15l-.5 3.5M7 15l.5 3.5"></path>
    </svg>
    add to basket
  </button>
  <button class="product-buttons__favourite">
    <svg
      class="product-buttons__svg"
      stroke="var(--main-orange)"
      fill="none"
      stroke-width="1.5"
      viewBox="0 0 24 24"
      height="1em"
      width="1em"
      stroke-linecap="round"
      stroke-linejoin="round"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
      ></path>
    </svg>
  </button>
  
  {% else %}
  
    <h2 class="product-buttons__h2">OUT OF STOCK</h2>
    <button class="product-buttons__favourite">
      <svg
        class="product-buttons__svg"
        stroke="var(--main-orange)"
        fill="none"
        stroke-width="1.5"
        viewBox="0 0 24 24"
        height="1em"
        width="1em"
        stroke-linecap="round"
        stroke-linejoin="round"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
        ></path>
      </svg>
    </button>
  {% endif %}
  
</div>
