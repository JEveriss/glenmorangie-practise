{% style %}
  .wrapper {
    display: flex;
    flex-direction: column;
  }
  img {
    height: 500px;
  }
{% endstyle %}

{% assign shop_name = shop.name %}

<div class="wrapper">
  <h2>{{ shop_name }}</h2>
  <h2>{{ product.title }}</h2>

  <div>
    <img src="{{ product | image_url }}" />

    <h2>{{ product.price | money }}</h2>
    {{ product.description }}

  </div>
</div>

{% schema %}
  {
    "name": "Product",
    "settings": [
      {
        "type": "text",
        "label": "Volume",
        "id": "product_volume",
        "default": "100ml"
      }, {
        "type": "text",
        "label": "ABV",
        "id": "product_abv",
        "default": "40%"
      }
    ]
  }
{% endschema %}