{% style %}
  .wrapper {
    display: flex;
    flex-direction: column;
  }
  
  img {
    height: 500px;
  }
{% endstyle %}


<div class="wrapper">
  <h2>{{ product.title }}</h2>

  <div>
      <img src="{{ product | image_url }}" />

    <h2>{{ product.price | money }}</h2>
    {{ product.description }}
  </div>
</div>

{% schema %}
  {
    "name": "main-product",
    "tag": "section",
    "class": "main-product"
  }
{% endschema %}