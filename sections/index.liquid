{% style %}
  .hero {
    position: relative;
    padding-top: -8.2rem;
    height: calc(100vh - 8.2rem);
    background-size: cover;
    background-image: linear-gradient(#0000004d, #0000004d), url("https://cdn.shopify.com/s/files/1/0808/5792/3888/files/cadboll-estate-hreo.png?v=1692713219");
  }
  .hero__text {
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;

  }
  .hero__title {
    color: var(--main-white);
    font-size: 9.6rem;
    letter-spacing: -0.4rem;
    line-height: 1;
  }
  .hero__subtitle {
    color: var(--main-white);
    font-size: 1.7rem;
    width: 70rem;
    font-weight: 600;
    margin: 3rem auto;
  }
  button {
    border: 0.2rem var(--main-orange) solid;
    border-radius: 4rem;
    padding: 1rem 3rem;
    background-color: transparent;
    color: white;
    font-size: 1.2rem;
  }
  button:hover {
    background-color: var(--main-orange);
    cursor: pointer;

  }
{% endstyle %}

<div class="hero">
  <div class="hero__text">
    <h1 class="hero__title">THE CADBOLL ESTATE</h1>
    <p class="hero__subtitle">Our latest Cadboll Estate limited edition is a truly unique, local whisky from field to glass. Available now.</p>
    <a href="/collections/all"><button>BUY NOW</button></a>
  </div>

</div>